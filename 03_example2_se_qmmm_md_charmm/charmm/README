#!/bin/csh
#

# Generated by CHARMM-GUI (http://www.charmm-gui.org) v3.7
set charmm = charmm
set equi_prefix = step4_equilibration
set qmpr_prefix = step4.1_qmmmprep
set prod_prefix = step5_production
set prod_step   = step5
set qmpackage = mndo97


# Equilibration
${charmm} < ${equi_prefix}.inp > ${equi_prefix}.out

# QM/MM input preparation
${charmm} < ${qmpr_prefix}.inp > ${qmpr_prefix}.out

# Production
set cnt    = 1
set cntmax = 10

while ( ${cnt} <= ${cntmax} )
    @ pcnt = ${cnt} - 1
    set istep = ${prod_step}_${cnt}
    set pstep = ${prod_step}_${pcnt}
    if ( ${cnt} == 1 ) set pstep = ${equi_prefix}

    ${charmm} cnt=${cnt} ${qmpackage}=1 < ${prod_prefix}.inp > ${istep}.out
    @ cnt += 1
end


